{
  "name": "mdl-angular",
  "version": "1.2.2",
  "description": "Librairie de composants et styles Angular Material respectant le design system SNCF",
  "author": {
    "name": "Thomas Prioul (MASTERIS)",
    "email": "thomas.prioul@masteris.com"
  },
  "schematics": "./schematics/collection.json",
  "ng-add": {
    "save": "true",
    "description": "Adds a custom template to the project.",
    "factory": "./schematics/add-template/index#addTemplate"
  },
  "scripts": {
    "build": "tsc -p tsconfig.schematics.json",
    "postbuild": "copyfiles schematics/*/schema.json schematics/*/files/** schematics/collection.json ../../dist/mdl-angular/"
  },
  "keywords": [
    "angular",
    "material",
    "components",
    "design system",
    "sncf"
  ],
  "repository": {
    "type": "git",
    "url": "github:ThomasPrioul/mdl-angular-libs"
  },
  "exports": {
    ".": {
      "sass": "./scss/"
    }
  },
  "peerDependencies": {
    "@angular/cdk": "^18.2.0",
    "@angular/common": ">=18.2.0",
    "@angular/core": ">=18.2.0",
    "@angular/material": "^18.2.0"
  },
  "dependencies": {
    "tslib": "^2.3.0",
    "copyfiles": "file:../../node_modules/copyfiles",
    "typescript": "file:../../node_modules/typescript"
  },
  "sideEffects": false
}
