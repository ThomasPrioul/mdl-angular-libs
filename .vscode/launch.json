{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng serve (firefox)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:4200/",
      "pathMappings": [
        {
          "url": "webpack:///projects/showcase",
          "path": "${workspaceFolder}/projects/showcase"
        }
      ]
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
